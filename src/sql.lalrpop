// Lexer specification, with the primary purpose of making language keywords case insensitive
match {
    r"(?i)action" => "ACTION",
    r"(?i)add" => "ADD",
    r"(?i)all" => "ALL",
    r"(?i)alter" => "ALTER",
    r"(?i)and" => "AND",
    r"(?i)as" => "AS",
    r"(?i)asc" => "ASC",
    r"(?i)attach" => "ATTACH",
    r"(?i)authorization" => "AUTHORIZATION",

    r"(?i)between" => "BETWEEN",
    r"(?i)binary" => "BINARY",
    r"(?i)bit" => "BIT",
    r"(?i)by" => "BY",
    r"(?i)bool" => "BOOL",
    r"(?i)boolean" => "BOOLEAN",

    r"(?i)case" => "CASE",
    r"(?i)cascade" => "CASCADE",
    r"(?i)cascaded" => "CASCADED",
    r"(?i)char" => "CHAR",
    r"(?i)character" => "CHARACTER",
    r"(?i)check" => "CHECK",
    r"(?i)collate" => "COLLATE",
    r"(?i)column" => "COLUMN",
    r"(?i)constraint" => "CONSTRAINT",
    r"(?i)create" => "CREATE",
