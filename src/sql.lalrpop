    r"(?i)current_date" => "CURRENT_DATE",
    r"(?i)current_time" => "CURRENT_TIME",
    r"(?i)current_timestamp" => "CURRENT_TIMESTAMP",
    
    r"(?i)date" => "DATE",
    r"(?i)day" => "DAY",
    r"(?i)dec" => "DEC",
    r"(?i)decimal" => "DECIMAL",
    r"(?i)default" => "DEFAULT",
    r"(?i)deferred" => "DEFERRED",
    r"(?i)deferrable" => "DEFERRABLE",
    r"(?i)delete" => "DELETE",
    r"(?i)desc" => "DESC",
    r"(?i)describe" => "DESCRIBE",
    r"(?i)distinct" => "DISTINCT",
    r"(?i)double" => "DOUBLE",
    r"(?i)domain" => "DOMAIN",
    r"(?i)drop" => "DROP",
    
    r"(?i)else" => "ELSE",
    r"(?i)end" => "END",
    r"(?i)explain" => "EXPLAIN",
    r"(?i)except" => "EXCEPT",
    
    r"(?i)file" => "FILE",
    r"(?i)float" => "FLOAT",
